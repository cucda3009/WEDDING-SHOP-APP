<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewTenNguoiDung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBarDanhGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTenNguoiDung"
        android:numStars="5"
        android:rating="0" />

    <TextView
        android:id="@+id/textViewNoiDung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingBarDanhGia"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/textViewNgayDanhGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNoiDung"
        android:paddingTop="4dp"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray" />

</RelativeLayout>
