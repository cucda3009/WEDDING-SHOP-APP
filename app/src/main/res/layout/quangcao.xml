<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"> <!-- Nền mờ đen 50% cho fragment -->

    <!-- Nội dung chính của banner được căn giữa -->
    <LinearLayout
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/banner_background"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Hình ảnh banner quảng cáo -->
        <!-- Thay bằng ảnh banner của bạn -->

        <!-- Nút tắt (dấu X) để đóng banner -->

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginTop="1dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close banner"
            android:src="@drawable/close" />

        <ImageView
            android:id="@+id/bannerImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/u1" />

    </LinearLayout>
</FrameLayout>
